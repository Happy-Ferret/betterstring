	@$(FLEXCAT) $(SRCDIR)/$(CURDIR)/locale/BetterString_mcp.cd $< CATALOG $@

$(TARGETDIR)/dansk/BetterString.catalog: $(SRCDIR)/$(CURDIR)/locale/danish.ct
